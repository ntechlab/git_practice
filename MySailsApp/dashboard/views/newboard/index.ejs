<script>
  function home(){
    submit("/dashboard/index");
  }

  function back(){
    submit("/dashboard/index");
  }

  function create(){
    submit("/board/createBoard");
  }

  function cancel(){
    submit("/dashboard/index");
  }
  
  function enableCheck(){
	if($('#title').val().trim() == ""){
		$('#createBtn').prop('disabled', true);
	} else {
		$('#createBtn').prop('disabled', false);
	}
  }
  
  function init(){
    enableCheck();
  }
</script>
<div class="container theme-showcase" role="main">
<h3>新規作成</h3>
<form name="main" id="main" method="POST">
  <div>
    <div class="form-group">
      <label for="title">タイトル</label>
      <input class="form-control" name="title" id="title" onkeyup="enableCheck()" placeholder="ボードのタイトルを入力してください。" value="<%= title %>">
    </div>
   <div class="form-group">
      <label for="description">説明</label>
      <textarea class="form-control" rows="4" name="description" id="description" placeholder="ボードの説明を入力してください。"><%= desc %></textarea>
    </div>
    <button id="createBtn" type="submit" class="btn btn-default" onclick="return create()" >新規作成</button>
    <input type="button" class="btn btn-default" onclick="cancel()" value="キャンセル"/>
  </div>
</form>
</div>
