<script>
  function create(){
   var title = $('#title').val();
   if(title.trim() == ""){
   alert('タイトルを入力してください。');
   return false;
   }
   $('#title').val(title.trim());
    submit("/board/createBoard");
  }

  function cancel(){
    submit("/dashboard/index");
  }

  function home(){
    submit("/dashboard/index");
  }

  function logout(){
    submit("/auth/logout");
  }

  function submit(action){
    var form = document.forms.item(0);
    form.action = action;
    form.submit();
  }
</script>
