<script>
  // ユーザー作成
  function createUser(){
    console.log("createUser");
    if($('#username').val() == ''){
      alert('ユーザ名を入力してください。');
      return false;
    }
    if($('#password').val() == ''){
      alert('パスワードを入力してください。');
      return false;
    }
    if($('#nickname').val() == ''){
      alert('ニックネームを入力してください。');
      return false;
    }

    submit("/usermanage/createUser");
  };
  // 戻る
  function back(){
    console.log("back");
    submit("/usermanage/index");
  }
  
  function home(){
    submit("/dashboard/index");
  }
  // ログアウト
  function logout(){
    console.log("logout");
    submit("/auth/logout");
  }

  function submit(action){
    var form = document.forms.item(0);
    form.action = action;
    form.submit();
  }

</script>
